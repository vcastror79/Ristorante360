@model IEnumerable<Ristorante360Admin.Models.Category>

@{
    Layout = "~/Views/Shared/_Layout_General.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Categorias</h4>
                    <p class="mb-0">Your business dashboard template</p>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Administración</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Categorías</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Administración de Categorías</h4>
                        <a class="btn btn-success btn-sm" asp-controller="Categorias" asp-action="CategoriaCreate">Crear Categoría</a>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="adminTable" class="table table-striped table-bordered">
                                <thead class="bg-info">
                                    <tr>
                                        <th>
                                            Nombre de Categoria
                                        </th>
                                        <th>
                                            Acción
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var categoria in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => categoria.CategoryName)
                                            </td>
                                            <td>
                                                

                                                <div class="dropdown">
                                                    <button type="button" class="btn btn-success light sharp" data-toggle="dropdown">
                                                        <svg width="20px" height="20px" viewBox="0 0 24 24" version="1.1"><g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><rect x="0" y="0" width="24" height="24" /><circle fill="#000000" cx="5" cy="12" r="2" /><circle fill="#000000" cx="12" cy="12" r="2" /><circle fill="#000000" cx="19" cy="12" r="2" /></g></svg>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" asp-controller="Admin" asp-action="UserCreate" asp-route-UserId="@categoria.CategoryId">Editar</a>
                                                        <a class="dropdown-item" asp-controller="Admin" asp-action="UserDelete" asp-route-UserId="@categoria.CategoryId">Eliminar</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

<script>
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#adminTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
            }
        });
    });
</script>
