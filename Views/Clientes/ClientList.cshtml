@model List<Ristorante360Admin.Models.Client>

@{
    Layout = "~/Views/Shared/_Layout_General.cshtml";

}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hola, Bienvenido de nuevo!</h4>
                    <p class="mb-0"></p>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Administración</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Clientes</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Administración de Clientes</h4>
                        <a class="btn btn-success btn-sm" asp-controller="Clientes" asp-action="ClientCreate">Añadir Cliente</a>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="clientTable" class="display nowrap table table-striped" style="width:100%">
                                <thead class="bg-info">
                                    <tr>
                                        <th><strong>Nombre Completo</strong></th>
                                        <th><strong>Número telefónico</strong></th>
                                        <th><strong>Dirección</strong></th>
                                        <th><strong>Correo Electrónico</strong></th>
                                        <th><strong>Acción</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cliente in Model)
                                    {
                                        <tr>
                                            <td style="white-space: nowrap;">@cliente.FullName</td>
                                            <td>@cliente.PhoneNumber</td>
                                            <td>@cliente.Address</td>
                                            <td>@cliente.Email</td>
                                            <td>
                                                <div class="dropdown">
                                                    <button type="button" class="btn btn-success light sharp" data-toggle="dropdown">
                                                        <svg width="20px" height="20px" viewBox="0 0 24 24" version="1.1">
                                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                                <rect x="0" y="0" width="24" height="24" />
                                                                <circle fill="#000000" cx="5" cy="12" r="2" />
                                                                <circle fill="#000000" cx="12" cy="12" r="2" />
                                                                <circle fill="#000000" cx="19" cy="12" r="2" />
                                                            </g>
                                                        </svg>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" asp-controller="Clientes" asp-action="ClientCreate" asp-route-clientId="@cliente.ClientId">Editar</a>
                                                        <a class="dropdown-item" asp-controller="Clientes" asp-action="ClientDelete" asp-route-clientId="@cliente.ClientId">Eliminar</a>
                                                    </div>

                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>



                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>

<script>
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#clientTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
            },
            responsive: true
        });
    });
</script>


<style>
    div.container {
        max-width: 1200px
    }
</style>





