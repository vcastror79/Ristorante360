@model Ristorante360Admin.Models.Client
@{
    Layout = "~/Views/Shared/_Layout_General.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hola, Bienvenido!</h4>
                    <span>Editar</span>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Administración</a></li>
                    @if (Model.ClientId == 0)
                    {
                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Crear Cliente</a></li>
                    }
                    else
                    {
                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Editar Cliente</a></li>
                    }
                </ol>
            </div>
        </div>
        <!-- row -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    @if (Model.ClientId == 0)
                    {
                        <h4 class="card-title">Crear cliente</h4>
                    }
                    else
                    {
                        <h4 class="card-title">Editar cliente</h4>
                    }
                </div>
                <div class="card-body">
                    <div class="basic-form">
                        <form asp-action="ClientCreate" asp-controller="Clientes" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                            <!-- No olvides agregar el atributo 'novalidate' al formulario para evitar la validación automática del navegador -->
                            <div class="form-row">
                                <input type="hidden" asp-for="ClientId" class="form-control">
                                <div class="form-group col-md-6">
                                    <label asp-for="FullName">Nombre Completo</label>
                                    <input type="text" class="form-control" asp-for="FullName" required>
                                    <div class="invalid-feedback">
                                        Por favor ingrese el nombre completo.
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Número telefónico</label>
                                    <input type="text" class="form-control" asp-for="PhoneNumber" required>
                                    <div class="invalid-feedback">
                                        Por favor ingrese un número de teléfono válido.
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Dirección</label>
                                    <input type="text" class="form-control" asp-for="Address" required>
                                    <div class="invalid-feedback">
                                        Por favor ingrese la dirección.
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Correo Electrónico</label>
                                    <input type="text" class="form-control" asp-for="Email" required>
                                    <div class="invalid-feedback">
                                        Por favor ingrese un correo electronico válido.
                                    </div>
                                    <!-- El campo de correo electrónico es opcional, por lo que no se agrega el atributo 'required' -->
                                </div>
                            </div>

                            <!-- Resto del código permanece igual -->
                            @if (Model.ClientId == 0)
                            {
                                <button type="submit" class="btn btn-primary">Añadir Cliente</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary">Actualizar Cliente</button>
                            }
                            <a class="btn btn-dark" asp-controller="Clientes" asp-action="ClientList">Volver</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/customscripts/clientesctrl.js"></script>