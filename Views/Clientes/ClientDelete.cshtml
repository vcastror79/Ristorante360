@model Ristorante360Admin.Models.Client;
@{
    Layout = "~/Views/Shared/_Layout_General.cshtml";
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>¿Está seguro de eliminar el cliente?</h4>
                    <span>¿Está seguro de eliminar el cliente?</span>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Administración</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Eliminar Cliente</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="basic-form">
                        <form asp-action="ClientDelete" asp-controller="Clientes" method="post">
                            <div class="form-row">
                                <input type="hidden" asp-for="ClientId" class="form-control">
                                <div class="form-group col-md-6">
                                    <label asp-for="FullName">Nombre completo</label>
                                    <input type="text" class="form-control" asp-for="FullName" disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Número telefónico</label>
                                    <input type="text" class="form-control" asp-for="PhoneNumber" disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Dirección</label>
                                    <input type="text" class="form-control" asp-for="Address" disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Correo Electrónico</label>
                                    <input type="text" class="form-control" asp-for="Email" disabled>
                                </div>
                            </div>
                            <br>
                            <div>
                                <button type="submit" class="btn btn-danger">Eliminar cliente</button>
                                <a class="btn btn-dark" asp-controller="Clientes" asp-action="ClientList">Volver</a>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>